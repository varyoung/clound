@import "../../../../resource/mixins.styl";

.notice-common-detail
    common-panel(0,20px)
    >.panel
        width 100%
        display flex
        flex 0 1 auto
        flex-direction column
        >ul
            list-style none
            padding 0
            margin 0 0 0 0
            >li
                margin 20px
                display flex
                justify-content flex-start
                align-items middle
                >div
                    min-width 120px
                    &:first-child
                        text-align right
                        margin-right 10px
                    &:last-child
                        text-align left
                        color #cccccc