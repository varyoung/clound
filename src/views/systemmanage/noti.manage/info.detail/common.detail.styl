@import "../../../../resource/mixins.styl";

.notice-common-detail
    common-panel(0,20px)
    >.panel
        width 100%
        display flex
        flex 0 1 auto
        flex-direction column
        .detail-title
            display flex
            height: 70px;
            border-bottom: 1px solid #ededed;
            .title
                height: 60px;
                line-height: 80px;
                font-size 35px
                font-weight 700
            .time
                margin-left 20px
                font-size: 14px
                height: 60px;
                line-height: 93px;
            .date
                margin-left 10px
                font-size: 14px
                height: 60px;
                line-height: 93px;  
        .detail-content
            display flex
            border-bottom: 1px solid #ededed;
            .content
                margin-left: 40px;
        .detail-btn
            display flex
            margin-top 20px
        
    