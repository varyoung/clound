@import "mixins.styl";

.notice-common-detail
    common-panel(0,20px)
    >.panel
        width 100%
        display flex
        flex 0 1 auto
        flex-direction column
        .common-detail
            display flex
            border-bottom: 1px solid #ededed;
        .detail-box
            display: flex;
            flex-direction: column;
            font-size: 15px;
            .box-detail
                text-align: left;
                display: flex;
                margin 10px 0
                .label
                    font-weight: 700;
                .message
                    color #acacac
                    margin-left 10px    
        .detail-btn
            display flex
            margin-top 20px
        .detail-title
            font-size 35px
            font-weight 700    
        
    