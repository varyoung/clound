$main-color = #f4f5f7
$circle-color = #439ABC

.report-panel
    // width 1000px
    // margin 0 auto
    >.report-header
        background-color $main-color
        height 60px
        border-radius 5px
        display flex
        align-items center
        justify-content space-around
        >.title
            display flex
            align-items center
            div
                margin-right 10px
            >.circle
                height 10px
                width 10px
                border-radius 5px
                background-color $circle-color
    >.one-level-title,.two-level-title
        margin 5px 0px 5px 0px
        width 100%
        height 35px
        display flex
        align-items center
        border-bottom 1px solid #e9e9e9
        >.icon
            height 16px
            width 5px
            background-color $circle-color
            margin-right 10px
        >.message
            font-size 18px
    >.copy
        text-indent 2em
        margin 10px 0
        width 100%
    >.index
        display flex
        flex-wrap wrap
        >.item
            flex 1 0 300px
            height 100px
            display flex
            background-color $main-color
            margin 10px 20px 20px 10px
            border-radius 5px
    >.graph
        width 100%
        height 360px
