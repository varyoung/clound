.top-menu   
    display flex
    >.nav-menu
        display flex
        list-style none
        margin 0
        padding 0
        >li
            min-width 100px
            color #ffffff
            cursor pointer
            display flex
            justify-content: center
            flex 1 0 auto
        >li.active
            background-color #1a4360
            div
                min-width 80px
                align-items:center
                height 40px
                padding-bottom 10px
                border-bottom 1px solid #ffffff
