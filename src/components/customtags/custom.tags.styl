.sourceTag
    margin-top 10px
    align-self flex-start
    display flex
    .el-textarea__inner
        height 75px
    .el-tag
        margin-left 10px
        overflow hidden
        width 120px 
        text-overflow ellipsis 
        white-space: nowrap
        position relative
